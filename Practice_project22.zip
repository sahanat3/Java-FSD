package assistedpractice3;

import java.util.Arrays;
import java.util.Scanner;


public class Practice_project22 {

	public static void main(String[] args) {
		// Write a program in Java to find the fourth smallest element in an unsorted list
		
				// To find fourth smallest element
		        Scanner sc = new Scanner(System.in);

		        System.out.print("Enter the number of elements in the list: ");
		        int n = sc.nextInt();

		        int[] arr = new int[n];

		        System.out.println("Enter the elements of the list:");
		        for (int i = 0; i < n; i++) {
		            arr[i] = sc.nextInt();
		        }

		        int fourthSmallest = fourthSmallestElement(arr);

		        System.out.println("The fourth smallest element in the list is: " + fourthSmallest);

		        sc.close();
		    }
		    
		    public static int fourthSmallestElement(int[] arr) {
		        if (arr.length < 4) {
		            throw new IllegalArgumentException("Array does not have at least four elements.");
		            
		        }
		    
		        // Sort the array in ascending order
		        Arrays.sort(arr);

		        // The fourth smallest element, which is at index 3
		        return arr[3];
		    }
		}
     