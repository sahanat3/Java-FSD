package assistedpractice4;

public class Practice_project37 {

	
		// Writing a program in Java implementing the merge sort algorithm
		
		public static void mergeSort(int[] arr) {
	        if (arr == null || arr.length <= 1) {
	            return;
	        }

	        int n = arr.length;
	        int[] temp = new int[n];
	        sorting(arr, temp, 0, n - 1);
	    }

	    private static void sorting(int[] arr, int[] temp, int left, int right) {
	        if (left < right) {
	            int mid = left + (right - left) / 2;

	            // Sort the left and right halves
	            sorting(arr, temp, left, mid);
	            sorting(arr, temp, mid + 1, right);

	            // Merge the sorted halves
	            merge(arr, temp, left, mid, right);
	        }
	    }

	    private static void merge(int[] arr, int[] temp, int left, int mid, int right) {
	        int i = left;
	        int j = mid + 1;
	        int k = left;

	        // Merge elements from the left and right sub arrays in sorted order
	        while (i <= mid && j <= right) {
	            if (arr[i] <= arr[j]) {
	                temp[k++] = arr[i++];
	            } else {
	                temp[k++] = arr[j++];
	            }
	        }

	        // Copy any remaining elements from the left sub array
	        while (i <= mid) {
	            temp[k++] = arr[i++];
	        }

	        // Copy any remaining elements from the right sub array
	        while (j <= right) {
	            temp[k++] = arr[j++];
	        }

	        // Copy the merged elements back to the original array
	        for (k = left; k <= right; k++) {
	            arr[k] = temp[k];
	        }
	    }

	    public static void main(String[] args) {
	        int[] arr = {64, 34, 25, 12, 22, 11, 90};

	        System.out.println("Original array:");
	        printArray(arr);

	        mergeSort(arr);

	        System.out.println("Sorted array:");
	        printArray(arr);
	    }

	    public static void printArray(int[] arr) {
	        for (int i = 0; i < arr.length; i++) {
	            System.out.print(arr[i] + " ");
	        }
	        System.out.println();
	    }
	}