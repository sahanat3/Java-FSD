package assistedpractice2;

		// Write a program in Java to create a thread by extending the ‘Thread’ class and by implementing the “Runnable” interface

		// Extending Thread class
		class MyThread extends Thread {
		    public void run() {
		        for (int i = 1; i <= 5; i++) {
		            System.out.println("Thread (Extending Thread class): " + i);
		            try {
		                Thread.sleep(500);
		            } catch (InterruptedException e) {
		                System.out.println(e);
		            }
		        }
		    }
		}

		// Implementing Runnable interface
		class MyRunnable implements Runnable {
		    public void run() {
		        for (int i = 11; i <= 15; i++) {
		            System.out.println("Thread (Implementing Runnable): " + i);
		            try {
		                Thread.sleep(500);
		            } catch (InterruptedException e) {
		                System.out.println(e);
		            }
		        }
		    }
		}

		public class Practice_project11 {
		    public static void main(String[] args) {
		        // Extending Thread class
		        MyThread thread1 = new MyThread();

		        // Implementing Runnable interface
		        MyRunnable myRunnable = new MyRunnable();
		        Thread thread2 = new Thread(myRunnable);

		        thread1.start(); 
		        thread2.start(); 		 
		        }
		}

	
